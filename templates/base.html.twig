<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}symfony tests!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}


        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        {# the CSS file lives at "public/css/test.css" #}
        <link href="{{ asset('css/test.css') }}" rel="stylesheet"/>

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}


    </head>

    <body>

        {% block header %}
            <header>
                <div id="sidebar">
                    {% block sidebar %}
                        <ul>
                            <li><a href="{{ path('app_test_sayhello') }}">Say Hello</a></li>
                            <li><a href="{{ path('app_test_saybonjour') }}">Say Bonjour</a></li>
                        </ul>
                    {% endblock %}
                </div>
            </header>
        {% endblock %}

        {% block body %}

            {# defini dans test/layout.html.twig #}
            <div id="content">
                {% block content %}{% endblock %}
            </div>

        {% endblock %}

        {# the JS file lives at "public/scripts/script.js" #}
        <script src="{{ asset('scripts/script.js') }}"></script>
    </body>
</html>
